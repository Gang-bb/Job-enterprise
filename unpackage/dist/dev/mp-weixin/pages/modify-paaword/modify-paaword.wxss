	height: 100vh;
}
.content{
	background: #FFFFFF;
	margin-top: 25rpx;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	padding: 30rpx;
